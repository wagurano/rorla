<p id="notice"><%= notice %></p>

<p>
  <b>Text:</b>
  <%= @problem.text %>
</p>

<h4>Choices</h4>
<ul>
  <% @problem.choices.each do |choice| %>
    <li>
      <%= choice.text %>
      <% if choice.correct %> (Correct) <% end %>

      <%= form_tag({controller: "choices", action: "destroy"}) do %>
        <%= hidden_field_tag :problem, @problem.id %>
        <%= hidden_field_tag :choice, choice.id %>
        <%= submit_tag "Delete" %>
      <% end %>
    </li>
  <% end %>
</ul>

<h5>New Choice</h5>
<%= form_tag({controller: "choices", action: "create"}) do %>
  <%= hidden_field_tag :problem, @problem.id %>

  <%= label_tag :text, "Text" %><br />
  <%= text_field_tag :text %>
  <br />
  <%= check_box_tag :correct %>
  <%= label_tag :correct, "Correct" %>
  <br />
  <%= submit_tag "Create" %>
<% end %>

<%= link_to 'Edit', edit_problem_path(@problem) %>
<%= link_to 'Back', problems_path %>
